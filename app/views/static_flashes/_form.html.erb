<%= form_for(@static_flash, html: {class: "form-horizontal"}) do |f| %>
  <% if @static_flash.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@static_flash.errors.count, "error") %> prohibited this static_flash from being saved:</h2>

      <ul>
      <% @static_flash.errors.full_messages.each do |message| %>
