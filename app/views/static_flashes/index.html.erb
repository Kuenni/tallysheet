<div class="page-header"><h1>Listing Static Flashes</h1></div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Expires</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @static_flashes.each do |static_flash| %>
      <tr>
        <td><%= static_flash.expires %></td>
        <td><%= static_flash.content %></td>
        <td><%= link_to 'Show', static_flash, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_static_flash_path(static_flash), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Destroy', static_flash, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'Back', root_path, class: "btn btn-default" %>
<%= link_to 'New Static flash', new_static_flash_path, class: "btn btn-primary" %>
