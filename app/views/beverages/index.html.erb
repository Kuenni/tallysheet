<h1>Listing beverages</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beverages.each do |beverage| %>
      <tr>
        <td><%= beverage.name %></td>
        <td><%= "%.2f" % beverage.price %> â‚¬</td>
        <td><%= link_to 'Show', beverage, class: "btn btn-default btn-xs" %>
        <%= link_to 'Edit', edit_beverage_path(beverage), class: "btn btn-primary btn-xs" %>
        <%= link_to 'Destroy', beverage, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

