<%= form_for(@consumer, html: {class: "form-horizontal"}) do |f| %>
<% if @consumer.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@consumer.errors.count, "error") %> prohibited this consumer from being saved:</h2>
	<ul>
		<% @consumer.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :name, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :email, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.email_field :email, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :visible, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.check_box :visible %>
	</div>
</div>

<div class="form-group">
	<%= f.label :credit, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<div class="input-group">
			<%= f.number_field :credit_humanized, class: "form-control", required: "required", min: "-10000", max: "10000", step: "0.01" %>
			<span class="input-group-addon">&euro;</span>
		</div>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-primary" %>
	</div>
</div>

<% end %>
