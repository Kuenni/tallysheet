<div class="page-header">
	<h1>Transfer credit from <%= @consumer.name %></h1>
</div>

<%= form_tag(consumer_transfer_path(@consumer), class: "form-horizontal") do %>

<div class="form-group">
	<%= label_tag :recipient, nil, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= select_tag :recipient_id, options_for_select(@recipients.collect{ |r| [r.name, r.id] }), class: "form-control" %>
	</div>
</div>

<div class="form-group">
	<%= label_tag :name, nil, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<div class="input-group">
			<%= text_field_tag :amount, "", placeholder: "0.00", class: "form-control" %>
			<span class="input-group-addon">&euro;</span>
		</div>
		(current debt: <%= style_debt @consumer.debt %>)
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= submit_tag 'Transfer', class: "btn btn-primary" %>
	</div>
</div>

<% end %>

<hr>

<%= link_to 'Back', consumer_path(@consumer), class: "btn btn-default" %>