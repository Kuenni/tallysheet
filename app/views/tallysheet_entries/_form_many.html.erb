<p>
	The tallysheet of each customer will be incremented by one.
</p>

<%= form_for(:tallysheet_entries, url: tallysheet_entries_create_many_path, html: {class: "form-horizontal"}) do |f| %>

<div class="form-group">
	<%= f.label :beverage, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.collection_select :beverage_id, @beverages, :id, :name, {include_blank: true}, class: "form-control" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :consumer, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.collection_check_boxes :consumer_ids, @consumers, :id, :name, class: "form-control" do |b|
		b.label(class: "checkbox") { b.check_box + b.text }
		end
		%>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-primary" %>
	</div>
</div>

<% end %>
