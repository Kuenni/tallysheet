<%= form_for(@tallysheet_entry, html: {class: "form-horizontal"}) do |f| %>
<% if @tallysheet_entry.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@tallysheet_entry.errors.count, "error") %> prohibited this tallysheet_entry from being saved:</h2>

	<ul>
		<% @tallysheet_entry.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :created_at, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.text_field :created_at, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :consumer, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.collection_select :consumer_id, @consumers, :id, :name, {include_blank: true}, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :beverage, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.collection_select :beverage_id, @beverages, :id, :name, {include_blank: true}, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<%= f.label :amount, class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= f.number_field :amount, class: "form-control", required: "required" %>
	</div>
</div>

<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<%= f.submit class: "btn btn-primary" %>
	</div>
</div>

<% end %>
